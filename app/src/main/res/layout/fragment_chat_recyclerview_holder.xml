<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/chat_recyclerview_container"
        android:layout_width="match_parent"
        android:layout_height="488dp">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/wallet_bright_foreground_holo_dark"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/chat_parent_message_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/chat_parent_submit_message_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:padding="11dp"
            app:srcCompat="@drawable/ic_reply_black_18dp" />

    </LinearLayout>
</LinearLayout>